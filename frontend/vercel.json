{
  "rewrites": [
    { "source": "/meeting/:id", "destination": "/api/share" },
    { "source": "/share/:id", "destination": "/api/share" },
    { "source": "/meet/:meetingId", "destination": "/index.html" },
    { "source": "/meeting/:meetingId", "destination": "/index.html" },
    { "source": "/join/:meetingId", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
